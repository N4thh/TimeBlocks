generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Bar {
  id         Int      @id @default(autoincrement())
  title      String
  totalHours Decimal
  parts      Part[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Part {
  id        Int      @id @default(autoincrement())
  title     String
  hours     Decimal
  barId     Int
  bar       Bar      @relation(fields: [barId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}